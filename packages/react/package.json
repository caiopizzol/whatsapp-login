{
  "name": "@whatsapp-login/react",
  "version": "0.1.0",
  "description": "WhatsApp phone verification component for React",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./src/styles.css",
    "./assets/*": "./dist/*"
  },
  "files": [
    "dist",
    "src/styles.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "whatsapp",
    "login",
    "authentication",
    "react",
    "verification",
    "otp",
    "phone"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/caiopizzol/whatsapp-login",
    "directory": "packages/react"
  }
}
